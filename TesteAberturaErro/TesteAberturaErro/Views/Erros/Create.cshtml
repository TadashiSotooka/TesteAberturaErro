@model TesteAberturaErro.ViewModels.ErrosView

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Erros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Erros.Titulo" class="control-label"></label>
                <input asp-for="Erros.Titulo" class="form-control" />
                <span asp-validation-for="Erros.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erros.Severidade" class="control-label"></label>
                <input asp-for="Erros.Severidade" class="form-control" />
                <span asp-validation-for="Erros.Severidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erros.Descricao" class="control-label"></label>
                <input asp-for="Erros.Descricao" class="form-control" />
                <span asp-validation-for="Erros.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erros.Produto" class="control-label"></label>
                <input asp-for="Erros.Produto" class="form-control" />
                <span asp-validation-for="Erros.Produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erros.DataHora" class="control-label"></label>
                <input asp-for="Erros.DataHora" class="form-control" />
                <span asp-validation-for="Erros.DataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erros.Imagem" class="control-label"></label>
                <!--<input asp-for="Imagem" class="form-control" />-->
                <input type="file" asp-for="Img" />
                <span asp-validation-for="Erros.Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erros.Email" class="control-label"></label>
                <input asp-for="Erros.Email" class="form-control" />
                <span asp-validation-for="Erros.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
